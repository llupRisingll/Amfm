{% if LOAN_REQUEST != false %}
	<script type="text/javascript">
		$(document).ready(function () {
			$("#cancel").on("click", function () { location.href = "/profile?cr=_"; })
		});
	</script>
{% else %}
	<script type="text/javascript">
		$(document).ready(function () {
			{# Redirect to act like an ajax #}
			var sendRequest = function (type) { location.href = "/profile?rl="+type; };
			{# EventListener List #}
			$("button.bronze").on("click", function () { sendRequest("b"); });
			$("button.silver").on("click", function () { sendRequest("s"); });
			$("button.gold").on("click", function () { sendRequest("g"); });
			$("button.diamond").on("click", function () { sendRequest("d"); });
			$("button.vip").on("click", function () { sendRequest("v"); });
		});
	</script>
{% endif %}