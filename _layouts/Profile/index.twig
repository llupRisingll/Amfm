
{% set page = "profile" %}
{% include "Profile/header.twig" %}

<div class="container mt-4">
	<div class="clearfix">
		<div class="float-left" style="display: inline-block;height: 150px; width: 150px; background: url('/img/person_icon.png') no-repeat; background-size: cover"></div>
		<div class="float-left ml-3 mt-0">
			<h3 >{{ FULL_NAME }}</h3>
			<div class="mt-1">
				<strong>Current Loan Package: </strong>
				{% if UNI_LEVEL or LOAN.loan_type %}
					<span>{{ LOAN.loan_type }}</span>
				{% else %}
					{% if LOAN_REQUEST == false %}
						<span>Not yet registered</span>
					{% else %}
						<span>Pending {{ LOAN_REQUEST }}</span>
					{% endif %}
				{% endif %}
			</div>
			<div class="mt-1">
				<strong>Remaining Loan Balance: </strong>
				{% if UNI_LEVEL or LOAN.loan_balance %}
					<span>{{ LOAN.loan_balance|number_format(2) }}</span>
				{% else %}
					<span> Not available</span>
				{% endif %}
			</div>
			<div class="mt-1">
				<strong>Maturity Date: </strong>
				{% if UNI_LEVEL or LOAN.maturity_date %}
					<span>{{ LOAN.maturity_date }}</span>
				{% else %}
					<span> Not available</span>
				{% endif %}
			</div>
			<div class="mt-1">
				<a href="/account/settings">Edit Profile Information</a>
			</div>
		</div>
	</div>

	{% if UNI_LEVEL or LOAN.loan_type %}
		<div class="card mt-5">
			<div class="card-body text-center">
				<h3 align="center" class="text-success font-weight-bold">Unilevel Program Member</h3>
				<hr class="separator">
				<div>You have a successfully loan and entitled with our unilevel affiliation program. </div>
				<a href="/unilevel" class="btn btn-outline-success font-weight-bold mt-2">
					<span>View Unilevel Program &raquo;</span>
				</a>
			</div>
		</div>
	{% elseif LOAN_REQUEST != false %}
	<div class="card mt-5">
		<div class="card-body text-center">
			<h3 align="center">Pending Loan</h3>
			<hr class="separator">
			<div>You have a successfully requested a loan and is currently pending. </div>
			<div>Please go to our office to continue this transaction.</div>
			<div>
				<b>Loan Package: </b><span>{{ LOAN_REQUEST }}</span>
			</div>
			<button class="btn btn-outline-warning font-weight-bold mt-2" data-toggle="modal" data-target="#cancelRequest">
				<span>&laquo; Cancel Current Loan Request</span>
			</button>
		</div>
	</div>

	{# Cancel Current Application Request Confirmation #}
	<div class="modal fade" id="cancelRequest" tabindex="-1" role="dialog"  aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header bg-danger text-white">
					<h5 class="modal-title" >Cancel Unilevel Application</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					Are you sure to cancel this current application?
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					<button type="button" class="btn btn-danger" id="cancel" data-dismiss="modal">Cancel Request</button>
				</div>
			</div>
		</div>
	</div>
	{% else %}
	<h2 align="center">Select Loan Package</h2>
	<hr class="separator">
	<div class="row">
		<div class="col-6 mb-3">
			<div class="card">
				<div class="card-body">
					<h4 class="font-weight-bold text-primary">Bronze Package</h4>
					<div class="row">
